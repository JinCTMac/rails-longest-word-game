<h1>New game</h1>
<ul class="list-inline letters">
<% @letters.each do |letter| %>
<li class="list-inline-item"><%= letter %></li>
<% end %>
</ul>

<div class="container form-container">
<p>What is the longest word you can make?</p>
<form action="/score" method="post">
  <input type="text" name="word">
  <input type="submit" value="Play">
  <%# we need hidden field tags to pass things as params from one url to another %>
  <%= hidden_field_tag :letters, @letters %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
</div>
